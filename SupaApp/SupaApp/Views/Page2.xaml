<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SupaApp.Views.Page2">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Enter the code to play." />
            <Entry x:Name="CodeEntry" Placeholder="Enter code" />
            <!-- Make sure the NetworkLabel is defined in the current page -->
            <Label x:Name="NetworkLabel" />
            <Button Text="Back" Clicked="OnBackButtonClicked" />
            <Button Text="Submit" Clicked="OnSubmitButtonClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>